<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="4"
        android:shrinkColumns="1"
        android:stretchColumns="0, 2">

        <TableRow>

            <TextView
                android:background="@color/teal_700"
                android:text="TextView1" />

            <TextView
                android:layout_span="2"
                android:background="@color/purple_500"
                android:text="TextView2TextView2TextView2TextView2TextView2" />

            <TextView
                android:layout_column="3"
                android:background="@color/black"
                android:text="TextView3"
                android:textColor="@color/white" />

            <TextView
                android:background="#642F3A"
                android:text="TextView4"
                android:textColor="@color/white" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/teal_700"
                android:text="TextView1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:text="TextView2" />

            <TextView
                android:layout_height="match_parent"
                android:background="@color/black"
                android:text="TextView3"
                android:textColor="@color/white" />

            <TextView
                android:layout_height="match_parent"
                android:background="#642F3A"
                android:text="TextView4"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow>

            <TextView
                android:background="#3A7AFF"
                android:text="TextView5" />

            <TextView
                android:background="@color/purple_200"
                android:text="TextView6" />

            <TextView
                android:background="@color/teal_200"
                android:text="TextView7"
                android:textColor="@color/white" />

            <TextView
                android:background="#FF66DD"
                android:text="TextView8"
                android:textColor="@color/white" />

        </TableRow>

    </TableLayout>

</LinearLayout>