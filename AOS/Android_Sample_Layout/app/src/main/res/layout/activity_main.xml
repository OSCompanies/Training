<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <!--    match_parent : 부모의 길이만큼 채운다
            wrap_content : 값의 길이만큼 채운다-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <!--    레이아웃 세로 / 여백 20dp-->

        <Button
            android:id="@+id/btLayoutBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레이아웃 기본"/>

        <Button
            android:id="@+id/btColorChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="텍스트뷰 색상변경"/>

        <Button
            android:id="@+id/btImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미지 바꾸기"/>

        <EditText
            android:id="@+id/etEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전달할 데이터 입력하기"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
        <!--    hint : 가이드 텍스트, 입력하면 사라짐-->

        <Button
            android:id="@+id/btEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="데이터 전달하기"
            android:enabled="false"/>
        <!--    enabled : 버튼 활성화 여부 , 기본값 true-->

        <Button
            android:id="@+id/btGif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GIF 사용하기"/>

    </LinearLayout>

</LinearLayout>